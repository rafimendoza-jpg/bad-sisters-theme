{%- comment -%} Snippet: Pagination {%- endcomment -%}

{%- if paginate.pages > 1 -%}
  <nav class="pagination" role="navigation" aria-label="Paginación">
    {%- if paginate.previous -%}
      <a href="{{ paginate.previous.url }}" aria-label="Página anterior">&laquo;</a>
    {%- endif -%}

    {%- for part in paginate.parts -%}
      {%- if part.is_link -%}
        <a href="{{ part.url }}">{{ part.title }}</a>
      {%- else -%}
        {%- if part.title == paginate.current_page -%}
          <span class="current" aria-current="page">{{ part.title }}</span>
        {%- else -%}
          <span>{{ part.title }}</span>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}

    {%- if paginate.next -%}
      <a href="{{ paginate.next.url }}" aria-label="Página siguiente">&raquo;</a>
    {%- endif -%}
  </nav>
{%- endif -%}
