{%- comment -%}
  Section: Product Reviews — Powered by Junip
  Renders the Junip review widget below the main product section.
{%- endcomment -%}

<section class="product-reviews-section section-padding" data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="reviews-container">
      <h2 class="reviews-title">{{ section.settings.title | default: 'Reseñas de clientes' }}</h2>
      <div id="junip-product-review-widget" data-product-id="{{ product.id }}"></div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Reseñas de producto",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Reseñas de clientes"
    }
  ],
  "templates": ["product"]
}
{% endschema %}
