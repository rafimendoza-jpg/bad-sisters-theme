{%- comment -%} Section: 404 {%- endcomment -%}

<section class="page-404" data-section-id="{{ section.id }}">
  <div class="page-width">
    <h1 class="page-404__heading">404</h1>
    <h2>{{ section.settings.heading }}</h2>
    <p class="page-404__text">{{ section.settings.text }}</p>
    <a href="/" class="btn btn--primary">{{ section.settings.button_text }}</a>
  </div>
</section>

{% schema %}
{
  "name": "Página 404",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Página no encontrada"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Texto",
      "default": "La página que buscas no existe o ha sido movida."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Volver al inicio"
    }
  ]
}
{% endschema %}
