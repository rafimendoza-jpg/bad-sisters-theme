{%- comment -%} Section: Main Blog {%- endcomment -%}

<section class="section-padding" data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="text-center mb-4">
      <h1>{{ blog.title }}</h1>
    </div>

    {%- paginate blog.articles by section.settings.articles_per_page -%}
      <div class="grid grid--{{ section.settings.columns }}">
        {%- for article in blog.articles -%}
          <article class="product-card">
            {%- if article.image -%}
              <a href="{{ article.url }}" class="product-card__media" style="aspect-ratio: 16/10;">
                <img
                  src="{{ article.image | image_url: width: 600 }}"
                  srcset="{{ article.image | image_url: width: 300 }} 300w, {{ article.image | image_url: width: 450 }} 450w, {{ article.image | image_url: width: 600 }} 600w"
                  sizes="(max-width: 767px) 100vw, 33vw"
                  alt="{{ article.image.alt | default: article.title }}"
                  loading="lazy"
                  decoding="async"
                  width="{{ article.image.width }}"
                  height="{{ article.image.height }}"
                >
              </a>
            {%- endif -%}
            <div class="product-card__info">
              <p class="product-card__vendor">{{ article.published_at | date: '%d %b %Y' }}</p>
              <h3 class="product-card__title">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h3>
              {%- if section.settings.show_excerpt and article.excerpt != blank -%}
                <p style="font-size: 0.9rem; color: var(--color-text-light); margin-top: 0.5rem;">
                  {{ article.excerpt_or_content | strip_html | truncatewords: 25 }}
                </p>
              {%- endif -%}
              <a href="{{ article.url }}" style="font-size: 0.85rem; font-weight: 500; color: var(--color-accent); margin-top: 0.5rem; display: inline-block;">
                Leer más →
              </a>
            </div>
          </article>
        {%- endfor -%}
      </div>

      {%- if paginate.pages > 1 -%}
        {% render 'pagination', paginate: paginate %}
      {%- endif -%}
    {%- endpaginate -%}
  </div>
</section>

{% schema %}
{
  "name": "Blog",
  "settings": [
    {
      "type": "range",
      "id": "articles_per_page",
      "min": 3,
      "max": 24,
      "step": 3,
      "label": "Artículos por página",
      "default": 9
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columnas",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" }
      ],
      "default": "3"
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Mostrar extracto",
      "default": true
    }
  ]
}
{% endschema %}
