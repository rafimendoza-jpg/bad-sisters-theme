{%- comment -%} Section: Image with Text {%- endcomment -%}

<section class="section-padding" data-section-id="{{ section.id }}" data-animate style="background-color: {{ section.settings.background_color }};">
  <div class="page-width">
    <div class="image-with-text{% if section.settings.layout == 'image_right' %} image-with-text--reverse{% endif %}">
      <div class="image-with-text__media">
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 800 }}"
            srcset="{{ section.settings.image | image_url: width: 400 }} 400w, {{ section.settings.image | image_url: width: 600 }} 600w, {{ section.settings.image | image_url: width: 800 }} 800w"
            sizes="(max-width: 767px) 100vw, 50vw"
            alt="{{ section.settings.image.alt | default: section.settings.heading }}"
            loading="lazy"
            decoding="async"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>

      <div class="image-with-text__content" style="text-align: {{ section.settings.text_alignment }};">
        {%- if section.settings.subheading != blank -%}
          <p style="font-size: 0.8rem; letter-spacing: 0.15em; text-transform: uppercase; color: var(--color-accent); margin-bottom: 0.5rem;">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h2 class="image-with-text__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="image-with-text__text rte">
            {{ section.settings.text }}
          </div>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="btn btn--{{ section.settings.button_style }}">
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Imagen con texto",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Posición de imagen",
      "options": [
        { "value": "image_left", "label": "Imagen a la izquierda" },
        { "value": "image_right", "label": "Imagen a la derecha" }
      ],
      "default": "image_left"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subtítulo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Imagen con texto"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Texto",
      "default": "<p>Usa esta sección para describir tu marca. Cuenta tu historia, habla de tu producto o describe un proceso.</p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Alineación del texto",
      "options": [
        { "value": "left", "label": "Izquierda" },
        { "value": "center", "label": "Centro" }
      ],
      "default": "left"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Botón"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texto del botón",
      "default": "Conocer más"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del botón"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Estilo del botón",
      "options": [
        { "value": "primary", "label": "Primario" },
        { "value": "secondary", "label": "Secundario" },
        { "value": "accent", "label": "Acento" }
      ],
      "default": "secondary"
    }
  ],
  "presets": [
    {
      "name": "Imagen con texto"
    }
  ]
}
{% endschema %}
