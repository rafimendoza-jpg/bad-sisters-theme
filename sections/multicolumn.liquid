{%- comment -%} Section: Multi-column / Features {%- endcomment -%}

<section class="section-padding" data-section-id="{{ section.id }}" data-animate style="background-color: {{ section.settings.background_color }};">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="text-center mb-4">
        {%- if section.settings.subheading != blank -%}
          <p style="font-size: 0.8rem; letter-spacing: 0.15em; text-transform: uppercase; color: var(--color-accent); margin-bottom: 0.5rem;">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}
        <h2>{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <div class="grid grid--{{ section.settings.columns }}">
      {%- for block in section.blocks -%}
        <div class="multicolumn__item" style="text-align: {{ section.settings.text_alignment }};" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <div style="margin-bottom: 1rem;">
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                alt="{{ block.settings.heading | default: 'Image' }}"
                loading="lazy"
                width="600"
                style="border-radius: var(--border-radius);"
              >
            </div>
          {%- endif -%}

          {%- if block.settings.icon != blank -%}
            <div style="font-size: 2.5rem; margin-bottom: 1rem;">{{ block.settings.icon }}</div>
          {%- endif -%}

          {%- if block.settings.heading != blank -%}
            <h3 style="font-size: 1.15rem; margin-bottom: 0.5rem;">{{ block.settings.heading }}</h3>
          {%- endif -%}

          {%- if block.settings.text != blank -%}
            <div class="rte" style="font-size: 0.9rem;">
              {{ block.settings.text }}
            </div>
          {%- endif -%}

          {%- if block.settings.button_label != blank -%}
            <a href="{{ block.settings.button_link }}" class="btn btn--small btn--secondary" style="margin-top: 1rem;">
              {{ block.settings.button_label }}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

