{%- comment -%} Customer: Register {%- endcomment -%}

<section class="section-padding">
  <div class="page-width" style="max-width: 500px;">
    <h1 class="text-center mb-4">Crear cuenta</h1>

    {%- form 'create_customer' -%}
      {%- if form.errors -%}
        <div style="background-color: #fff0f0; border: 1px solid var(--color-sale); padding: 1rem; border-radius: var(--border-radius); margin-bottom: 1.5rem;">
          <p style="color: var(--color-sale); font-size: 0.9rem;">{{ form.errors | default_errors }}</p>
        </div>
      {%- endif -%}

      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem;">
        <div>
          <label for="FirstName" style="display: block; font-size: 0.85rem; font-weight: 500; margin-bottom: 0.5rem;">Nombre</label>
          <input type="text" id="FirstName" name="customer[first_name]" autocomplete="given-name" required>
        </div>
        <div>
          <label for="LastName" style="display: block; font-size: 0.85rem; font-weight: 500; margin-bottom: 0.5rem;">Apellido</label>
          <input type="text" id="LastName" name="customer[last_name]" autocomplete="family-name" required>
        </div>
      </div>

      <div style="margin-bottom: 1rem;">
        <label for="Email" style="display: block; font-size: 0.85rem; font-weight: 500; margin-bottom: 0.5rem;">Email</label>
        <input type="email" id="Email" name="customer[email]" autocomplete="email" required>
      </div>

      <div style="margin-bottom: 1.5rem;">
        <label for="Password" style="display: block; font-size: 0.85rem; font-weight: 500; margin-bottom: 0.5rem;">Contraseña</label>
        <input type="password" id="Password" name="customer[password]" autocomplete="new-password" required>
      </div>

      <button type="submit" class="btn btn--primary btn--full">Crear cuenta</button>

      <div class="text-center" style="margin-top: 1.5rem;">
        <p style="font-size: 0.9rem; color: var(--color-text-light);">
          ¿Ya tienes cuenta? <a href="/account/login" style="color: var(--color-accent);">Iniciar sesión</a>
        </p>
      </div>
    {%- endform -%}
  </div>
</section>
