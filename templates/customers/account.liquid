<script>
  /* ====== BSD ACCOUNT REVIEW SYSTEM ====== */
  (function() {
    var CUSTOMER_ID = '{{ customer.id }}';
    var STORAGE_KEY = 'bsd_reviewed_' + CUSTOMER_ID;
    var SHOP_URL = '{{ shop.url }}';

    function getReviewed() {
      try { return JSON.parse(localStorage.getItem(STORAGE_KEY)) || {}; } catch(e) { return {}; }
    }
    function markReviewed(pid) {
      var data = getReviewed();
      data[pid] = Date.now();
      localStorage.setItem(STORAGE_KEY, JSON.stringify(data));
    }
    function isReviewed(pid) {
      return !!getReviewed()[pid];
    }

    /* Mark already-reviewed items on load */
    var items = document.querySelectorAll('[data-review-item]');
    var pendingCount = 0;

    items.forEach(function(item) {
      var pid = item.dataset.productId;
      if (isReviewed(pid)) {
        showDone(item);
      } else {
        pendingCount++;
      }
    });

    if (pendingCount === 0 && items.length > 0) {
      showAllDone();
    }

    function showDone(item) {
      var btn = item.querySelector('[data-review-open]');
      var done = item.querySelector('[data-review-done]');
      var form = item.querySelector('[data-review-form]');
      if (btn) btn.style.display = 'none';
      if (done) done.style.display = 'inline-flex';
      if (form) form.style.display = 'none';
    }

    function showAllDone() {
      var allDone = document.querySelector('[data-reviews-all-done]');
      if (allDone) allDone.style.display = 'flex';
    }

    /* Star rating picker */
    document.querySelectorAll('[data-star-picker]').forEach(function(picker) {
      var stars = picker.querySelectorAll('[data-star]');
      var selected = 0;

      stars.forEach(function(star) {
        star.addEventListener('mouseenter', function() {
          var val = parseInt(this.dataset.star);
          stars.forEach(function(s) {
            s.classList.toggle('is-hovered', parseInt(s.dataset.star) <= val);
          });
        });
        star.addEventListener('mouseleave', function() {
          stars.forEach(function(s) { s.classList.remove('is-hovered'); });
        });
        star.addEventListener('click', function() {
          selected = parseInt(this.dataset.star);
          stars.forEach(function(s) {
            s.classList.toggle('is-active', parseInt(s.dataset.star) <= selected);
          });
          /* Store on parent for later retrieval */
          picker.dataset.rating = selected;
        });
      });
    });

    /* Open/close review form */
    document.querySelectorAll('[data-review-open]').forEach(function(btn) {
      btn.addEventListener('click', function() {
        var item = btn.closest('[data-review-item]');
        var form = item.querySelector('[data-review-form]');
        if (form) {
          form.style.display = form.style.display === 'none' ? 'block' : 'none';
        }
      });
    });

    document.querySelectorAll('[data-review-cancel]').forEach(function(btn) {
      btn.addEventListener('click', function() {
        var form = btn.closest('[data-review-form]');
        if (form) form.style.display = 'none';
      });
    });

    /* Submit review via Shopify contact form */
    document.querySelectorAll('[data-review-submit]').forEach(function(btn) {
      btn.addEventListener('click', function() {
        var item = btn.closest('[data-review-item]');
        var form = item.querySelector('[data-review-form]');
        var picker = item.querySelector('[data-star-picker]');
        var textarea = item.querySelector('[data-review-text]');
        var msg = item.querySelector('[data-review-msg]');

        var pid = item.dataset.productId;
        var title = item.dataset.productTitle;
        var handle = item.dataset.productHandle;
        var rating = picker ? (parseInt(picker.dataset.rating) || 0) : 0;
        var text = textarea ? textarea.value.trim() : '';

        /* Validate */
        if (rating === 0) {
          showMsg(msg, 'Por favor selecciona una calificación (estrellas).', 'error');
          return;
        }
        if (text.length < 5) {
          showMsg(msg, 'Por favor escribe al menos unas palabras sobre el producto.', 'error');
          return;
        }

        btn.disabled = true;
        btn.textContent = 'Enviando…';

        /* Build form data for Shopify contact form */
        var fd = new FormData();
        fd.append('form_type', 'contact');
        fd.append('utf8', '✓');
        fd.append('contact[email]', '{{ customer.email }}');
        fd.append('contact[body]',
          '--- RESEÑA DE PRODUCTO ---\n' +
          'Cliente: {{ customer.first_name }} {{ customer.last_name }}\n' +
          'Email: {{ customer.email }}\n' +
          'Producto: ' + title + '\n' +
          'Handle: ' + handle + '\n' +
          'Product ID: ' + pid + '\n' +
          'Calificación: ' + rating + '/5 ' + '★'.repeat(rating) + '☆'.repeat(5 - rating) + '\n' +
          'Reseña: ' + text + '\n' +
          '---'
        );

        fetch('/contact', {
          method: 'POST',
          body: fd,
          headers: { 'Accept': 'application/json' }
        }).then(function(res) {
          /* Shopify contact form typically returns 200 or 302 */
          markReviewed(pid);
          showMsg(msg, '¡Gracias! Tu reseña fue enviada.', 'success');
          showDone(item);
          pendingCount--;
          if (pendingCount <= 0) {
            setTimeout(showAllDone, 600);
          }
        }).catch(function() {
          /* Even if fetch "fails" (redirect), the form was likely sent */
          markReviewed(pid);
          showMsg(msg, '¡Gracias! Tu reseña fue enviada.', 'success');
          showDone(item);
          pendingCount--;
          if (pendingCount <= 0) {
            setTimeout(showAllDone, 600);
          }
        });
      });
    });

    function showMsg(el, text, type) {
      if (!el) return;
      el.textContent = text;
      el.className = 'account-review-form__msg is-' + type;
      el.style.display = 'block';
    }
  })();
</script>
